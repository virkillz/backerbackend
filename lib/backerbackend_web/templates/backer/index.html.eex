<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <h2 class="pull-left page-title">Listing Backer</h2>
        <ol class="breadcrumb pull-right">
            <li><a href="/">Phoenix Admin</a></li>
            <li><a href="#">Backer</a></li>
            <li class="active">Index</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">  
                <%= link "New Backer", to: backer_path(@conn, :new), class: "btn btn-primary waves-effect waves-light m-b-5" %>                                      
            </div>          
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                  <th>ID</th>
                                  <th>Username</th>
                                  <th>Display name</th>
                                  <th>Address</th>
                                  <th>Email</th>
                            
                                  <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                  <%= for backer <- @backer do %>
                                      <tr>
                                        <td><%= backer.id %></td>
                                        <td><%= backer.username %></td>
                                        <td><%= backer.display_name %></td>
                                        <td><%= backer.address %></td>
                                        <td><%= backer.email %></td>

                                        <td class="text-right">
                                          <span><%= link "Show", to: backer_path(@conn, :show, backer), class: "btn btn-default btn-xs" %></span>
                                          <span><%= link "Edit", to: backer_path(@conn, :edit, backer), class: "btn btn-default btn-xs" %></span>
                                          <span><%= link "Delete", to: backer_path(@conn, :delete, backer), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
                                        </td>
                                      </tr>
                                  <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End row -->
